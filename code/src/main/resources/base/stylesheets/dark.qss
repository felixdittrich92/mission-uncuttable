QMainWindow, QMenuBar {
    background-color: #11151C;

}

QSplitter::handle:horizontal {
    background: #212D40;
    width: 2px;
}
QSplitter::handle:vertical {
    background: #212D40;
    height: 2px;
}

#videoplayer_frame {
    background-color: #212D40;
    border: 1px solid #364156;
}

/* MENU */
QMenuBar, QMenu {
  color: #F5F5F5;
}

QMenuBar {
    border-bottom: 2px solid #212D40;
    padding: 2px;
}

QMenuBar::item::selected {
    background-color: transparent;
}

QMenuBar::item::pressed, QMenu {
    background-color: #364156;
}

QMenu::item::selected {
    background-color: #212D40;
}

/* SCROLLBARS */

QScrollBar:horizontal, QScrollBar:vertical {
    border: 2px solid #364156;
    background: #364156;
}
QScrollBar:horizontal {
    height: 20px;
    margin: 0 20px 0 20px;
}

QScrollBar:vertical {
    width: 20px;
    margin: 20px 0 20px 0;
}

QScrollBar::handle:horizontal, QScrollBar::handle:vertical {
    background: #212D40;
}
QScrollBar::handle:horizontal {
    min-width: 20px;
}
QScrollBar::handle:vertical {
    min-height: 20px;
}

QScrollBar::add-line:horizontal,
QScrollBar::add-line:vertical,
QScrollBar::sub-line:horizontal,
QScrollBar::sub-line:vertical {
    background: #364156;
    subcontrol-origin: margin;
}
QScrollBar::add-line:horizontal {
    width: 20px;
    subcontrol-position: right;
}
QScrollBar::add-line:vertical {
    height: 20px;
    subcontrol-position: bottom;
}
QScrollBar::sub-line:horizontal {
    width: 20px;
    subcontrol-position: left;
}
QScrollBar::sub-line:vertical {
    height: 20px;
    subcontrol-position: top;
}

QScrollBar:left-arrow:horizontal,
QScrollBar::right-arrow:horizontal,
QScrollBar:up-arrow:vertical,
QScrollBar::down-arrow:vertical {
    width: 5px;
    height: 5px;
    background: #212D40;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

/* TIMELINE */

QScrollArea {
    background: #212D40;
    border: 1px solid #364156;
}

#scroll_area {
    margin: 0;
}

QScrollArea #track_frame QFrame{
    background: #212D40;
    border: 1px solid #364156;
    margin-left: -1px;
    margin-top: -1px;
    padding-left: 5px;
}

#track_button, #track_button_light {
    background: #7D4E57;
    border: 1px solid #364156;
    color: #F5F5F5;
    margin: 0;
}

#track_button_light {
    background: #955F69;
}

#time_label {
    color: #F5F5F5;
    background: #212D40;
    border: 1px solid #364156;
}

/* FILEMANAGER */
#filemanager_frame{
    background-color: #212D40;
    border: 1px solid #364156;
}
#filemanager_frame #listWidget {
    background-color: #212D40;
    border: none;
    show-decoration-selected: 1;
}
#filemanager_frame #listWidget::item {
    color: white;
    padding: 5px;
    border: 1px solid transparent;
}

#filemanager_frame #listWidget::item:selected {
    background: #212D40;
    border: 1px solid #364156;
    color: #D66853;
}

#filemanager_frame #listWidget::item:hover {
    color: #D66853;
}


/* VIDEOPLAYER */

#video_label {
    border:none
}

#videoplayer_frame QPushButton {
    border: none;

}

#first_frame_button {
    margin-left: 10px;
}
#maximize_button {
    margin-right: 10px;
}

QSlider::groove:horizontal {
    border: 1px solid #D66853;
    height: 5px;
    background: none;
    border-radius: 3px;
    margin-left: 10px;
    margin-right: 10px;
}

QSlider::handle:horizontal {
    background: #D66853;
    border: 0;
    width: 15px;
    margin: -5px 0; /* handle is placed by default on the contents rect of the groove. Expand outside the groove */
    border-radius: 7px;
}
QSlider::sub-page:horizontal {
    background: #D66853;
    border: 0;
    border-radius: 3px;
    margin-left: 10px;
}